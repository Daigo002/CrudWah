<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">    
    <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.22/css/dataTables.bootstrap5.min.css">
      <style>
       table.dataTable thead {
             background-color:#7952b3;
             color:aliceblue;
         }  
      </style>
  </head>
  <body>
      <div class="container-fluid">
          <div class="row">
              <div class="col">
                 <table id="tablaArticulos" class="table table-striped table-bordered" style="width:100%">
                 <thead>
                   <tr>
                      <th>ID</th>
                      <th>DESCRIPCION</th>
                      <th>PRECIO</th>                                
                      <th>STOCK</th>                      
                  </tr>
                 </thead>
                 <tbody>
                 </tbody>
                 </table> 
              </div>
          </div>
      </div>
        <tbody>
          <% results.forEach((prod)=>{ %>
            <tr>  
                <td><%= prod.id %></td>  
                <td><%= prod.nombre %></td>
                <td><%= prod.marca %></td>
                <td><%= prod.precio %></td>
                <td><%= prod.cantidad %></td>
                <td>
                  <a href="/edit/<%= prod.id %>" class="btn btn-outline-info"><i class='bx bxs-edit'></i></a>
                  <a href="/delete/<%= prod.id %>" class="btn btn-outline-danger"><i class='bx bxs-trash-alt'></i></a>                   
                </td>
            </tr>                                   
         <% }) %>
        </tbody>
      </table>
      </div>
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>    
</body>
</html>